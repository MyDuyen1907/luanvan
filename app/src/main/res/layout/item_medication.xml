
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_medicine_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên thuốc:"
                android:layout_marginRight="10dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/et_medicine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên thuốc:"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/et_dosage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liều lượng:"
                android:layout_marginRight="10dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/et_dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liều lượng:"
                android:layout_marginEnd="15dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/et_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian:"
                android:layout_marginRight="10dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/et_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian:"
                android:layout_marginEnd="15dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/et_reminder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhắc dùng thuốc:"
                android:layout_marginRight="10dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/et_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nhắc nhỡ:"
                android:layout_marginEnd="15dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/et_note_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú:"
                android:layout_marginEnd="15dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/et_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú:"
                android:layout_marginEnd="15dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <!-- Edit Button -->
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit User"
                android:background="?attr/selectableItemBackground"
                android:padding="10dp" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete User"
                android:background="?attr/selectableItemBackground"
                android:padding="10dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
