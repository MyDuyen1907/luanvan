<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/sleep"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:text="Giấc ngủ"
        android:textColor="#3C3C3E"
        android:textSize="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian bắt đầu ngủ:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:background="@drawable/edit_text_green_background"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/startSleepTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập thời gian"
        android:textColor="@color/gray_word"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian thức:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:background="@drawable/edit_text_green_background"/>
    <EditText
        android:id="@+id/wakeUpTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập thời gian"
        android:textColor="@color/gray_word"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chất lượng giấc ngủ"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="@drawable/edit_text_green_background"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/sleepQuality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/sleep_quality_options"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lần thức trong đêm:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:background="@drawable/edit_text_green_background"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/awakenings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số lần thức"
        android:textColor="@color/gray_word"
        android:layout_marginBottom="20dp"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chu kỳ giấc ngủ (Sâu, REM, Nhẹ)"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_green_background"/>
    <EditText
        android:id="@+id/sleepCycles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào chu kỳ giấc ngủ"
        android:textColor="@color/gray_word"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnSaveSleepData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu "
            android:textColor="@color/white"
            android:background="@color/green_main"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnSleepData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem báo cáo"
            android:textColor="@color/white"
            android:background="@color/green_main" />
    </LinearLayout>

</LinearLayout>
