
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvSleepTime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian ngủ:"
            android:layout_marginRight="10dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
        android:id="@+id/tvSleepTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvWakeUpTime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian Thức:"
            android:layout_marginRight="10dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvWakeUpTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvTotalSleepTime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng Thời gian ngủ:"
            android:layout_marginRight="10dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvTotalSleepTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvCaloriesBurned_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories Tiêu hao:"
            android:layout_marginRight="10dp"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvCaloriesBurned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvSleepQuality_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chất lượng giấc ngủ:"
            android:layout_marginRight="10dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvSleepQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete User"
                android:background="?attr/selectableItemBackground"
                android:padding="10dp"
                android:onClick="onDeleteClicked" />
        </LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>