<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:padding="10dp"
    tools:context=".activity.basicinfo.CurrenthealthActivity">

    <!-- ProgressBar để theo dõi tiến trình (nếu cần) -->
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="100"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp" />

    <!-- LinearLayout để chứa các trường nhập liệu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:weightSum="2"
        android:layout_weight="1"
        android:gravity="center|top"
        android:padding="@dimen/marginBase">

        <!-- Tiêu đề hướng dẫn -->
        <TextView
            android:textColor="@color/black_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hãy nhập thông tin sức khỏe hiện tại của bạn"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Trường nhập Nhịp tim -->
        <EditText
            android:id="@+id/edtHeartRate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhịp tim (bpm)"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/black_word"
            android:layout_marginTop="20dp"
            android:inputType="number"/>

        <!-- Trường nhập Huyết áp -->
        <EditText
            android:id="@+id/edtBloodPressure"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Huyết áp (mmHg)"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/black_word"
            android:inputType="number"/>

        <!-- Trường nhập Chỉ số đường huyết -->
        <EditText
            android:id="@+id/edtBloodSugar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Chỉ số đường huyết (mg/dL)"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/black_word"
            android:inputType="number"/>

        <!-- Trường nhập Mức cholesterol -->
        <EditText
            android:id="@+id/edtCholesterol"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Mức cholesterol (mg/dL)"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/black_word"
            android:inputType="number"/>
    </LinearLayout>

    <!-- Button để tiếp tục -->
    <Button
        android:id="@+id/btnTiepTuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp tục"
        android:background="@drawable/button_background"
        android:textColor="@color/white_word"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/marginBase" />
</LinearLayout>
