<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuổi: "
            android:textColor="@color/black_word" />
        <EditText
            android:id="@+id/edit_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="number"
            android:textSize="15dp"
            android:textColor="@color/black_word"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính: "
            android:textColor="@color/black_word"/>
        <RadioGroup
            android:id="@+id/rdg_gender"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        <RadioButton
            android:id="@+id/rd_female"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ" />
            <RadioButton
                android:id="@+id/rd_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiều cao (cm): "
            android:textColor="@color/black_word"/>
        <EditText
            android:id="@+id/edit_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text=""
            android:inputType="number"
            android:textColor="@color/black_word"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cân nặng (kg): "
            android:textColor="@color/black_word"/>
        <EditText
            android:id="@+id/edit_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text=""
            android:inputType="number"
            android:textColor="@color/black_word"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mức độ vận động: "
            android:textColor="@color/black_word"/>
        <RadioGroup
            android:id="@+id/rdg_exercise"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/rd_khong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kh_ng_v_n_ng" />

            <RadioButton
                android:id="@+id/rd_nhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/v_n_ng_nh_1_3_ng_y_tu_n" />

            <RadioButton
                android:id="@+id/rd_vua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/v_n_ng_v_a_4_5_ng_y_tu_n" />
            <RadioButton
                android:id="@+id/rd_nang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/v_n_ng_n_ng_6_7_ng_y_tu_n" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btn_reup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/button_background"
        android:text="Cập nhật"
        android:textColor="@color/white_word" />
</LinearLayout>


