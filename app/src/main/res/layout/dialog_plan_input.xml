<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragment.plansFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_add_plans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm kế hoạch của bạn"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Plan Description -->
        <EditText
            android:id="@+id/et_plan_description"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/edittext_border"
            android:gravity="top|start"
            android:hint="Mô tả kế hoạch"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_add_plans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Start Date -->
        <EditText
            android:id="@+id/et_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ngày bắt đầu"
            android:background="@drawable/edittext_border"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/et_plan_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/et_end_date"
            app:layout_constraintHorizontal_chainStyle="spread_inside" />

        <!-- End Date -->
        <EditText
            android:id="@+id/et_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ngày kết thúc"
            android:background="@drawable/edittext_border"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/et_plan_description"
            app:layout_constraintStart_toEndOf="@id/et_start_date"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Start Time -->
        <EditText
            android:id="@+id/et_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Thời gian bắt đầu"
            android:background="@drawable/edittext_border"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/et_start_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/et_end_time"
            app:layout_constraintHorizontal_chainStyle="spread_inside" />

        <!-- End Time -->
        <EditText
            android:id="@+id/et_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Thời gian kết thúc"
            android:background="@drawable/edittext_border"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/et_start_date"
            app:layout_constraintStart_toEndOf="@id/et_start_time"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Add Button -->
        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/black"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_start_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
