<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Phần ghi nhận cảm xúc hàng ngày -->

    <Button
        android:id="@+id/btnBackSuggestion"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:fontFamily="sans-serif"
        android:text="Theo dõi tâm lý"
        android:textColor="#3C3C3E"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/emotion_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cảm xúc hôm nay:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/emotion_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:hint="Nhập cảm xúc của bạn"/>

    <Button
        android:id="@+id/save_emotion_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu cảm xúc"
        android:background="@color/green_main"
        android:layout_gravity="center"/>



</LinearLayout>
